{
  "name": "@radixdlt/js-sdk",
  "version": "0.1.0alpha",
  "files": [
    "dist"
  ],
  "main": "./dist/js-sdk.umd.js",
  "module": "./dist/js-sdk.es.js",
  "exports": {
    ".": {
      "import": "./dist/js-sdk.es.js",
      "require": "./dist/js-sdk.umd.js"
    }
  },
  "types": "./dist/main.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && yarn build:types",
    "build:types": "tsc --project tsconfig.types.json --emitDeclarationOnly",
    "preview": "vite preview",
    "prettier": "prettier --write lib",
    "lint": "yarn eslint & yarn prettier & yarn tsc",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ci": "xvfb-run playwright test"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@hirez_io/observer-spy": "^2.2.0",
    "@peculiar/webcrypto": "^1.4.0",
    "@playwright/test": "^1.25.1",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "babel-preset-vite": "^1.0.4",
    "buffer": "^6.0.3",
    "eslint": "^8.22.0",
    "eslint-config-alloy": "^4.6.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "dependencies": {
    "loglevel": "^1.8.0",
    "neverthrow": "^5.0.0",
    "rxjs": "^7.5.6",
    "zod": "^3.18.0"
  }
}
