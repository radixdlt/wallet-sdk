{
    "compilerOptions": {
      "lib": [
        "ESNext",
        "DOM"
      ],
      "outDir": "dist",
      "removeComments": true,
      "target": "ES6",

      "baseUrl": "./",       
      "esModuleInterop": true, 
      "moduleResolution": "node",
  
      "sourceMap": true,
      "sourceRoot": "/",
  
      "alwaysStrict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "declaration": true,
      "strictBindCallApply": true
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*"
    ]
  }